<mvc:View
    controllerName="customauth.customauth.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <App id="app">
        <pages>
            <Page id="page" title="{i18n>title}">
                <content >
                    <Button text = "Login With Google" press = ".onGoogleBtnPress" visible="{= ${firebase>/auth} === false }"/> 
                    <Button text = "Logout" press = ".onLogoutBtnPress" visible="{firebase>/auth}"/>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
